@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sport In - Connect Athletes & Clubs</title>

    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <!-- Animation Library (AOS) -->
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <style>
        .input-field {
            width: 100%;
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            outline: none;
            transition: 0.3s;
        }

        .input-field:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
        }

    </style>
</head>

<body class="bg-gray-100 font-sans leading-normal tracking-normal">

    <!-- Header -->
    <header class="bg-white shadow fixed top-0 left-0 w-full z-50">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <h1 class="text-3xl font-bold text-blue-600">Sport In</h1>
            <nav class="space-x-6 text-gray-700 font-medium">
                <a href="#top" class="hover:text-blue-600">Home</a> <!-- Home Link -->
                <a href="#about" class="hover:text-blue-600">About</a>
                <a href="#contact" class="hover:text-blue-600">Contact</a>
                <button id="joinButton"
                    class="bg-blue-600 text-white py-2 px-4 rounded transition-all duration-300 transform hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 animate-bounce">
                    Join Now
                </button>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="pt-28 bg-blue-50 text-center">
        <div class="container mx-auto px-6 py-20" data-aos="fade-up">
            <h2 class="text-4xl font-bold text-gray-800 mb-4">Unite Athletes, Coaches, and Clubs with Sport In</h2>
            <p class="text-gray-600 text-lg mb-6">Analyze players, connect with clubs, learn from coaches, and access
                sports brands — all in one platform.</p>

            <!-- Multiple Images -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <img src="https://images.pexels.com/photos/863988/pexels-photo-863988.jpeg?auto=compress&cs=tinysrgb&w=600"
                    alt="Image 1"
                    class="rounded-lg shadow-md mx-auto transition duration-500 transform hover:scale-105 object-cover h-80 w-full">
                <img src="https://media.istockphoto.com/id/1420057741/photo/victory-is-ours.jpg?b=1&s=612x612&w=0&k=20&c=oJdxUtzQv6VoeriIIyEGL7ATkw4ZxfURma_mYVb1vB0="
                    alt="Image 2"
                    class="rounded-lg shadow-md mx-auto transition duration-500 transform hover:scale-105 object-cover h-80 w-full">
                <img src="https://images.pexels.com/photos/841130/pexels-photo-841130.jpeg?auto=compress&cs=tinysrgb&w=600"
                    alt="Image 3"
                    class="rounded-lg shadow-md mx-auto transition duration-500 transform hover:scale-105 object-cover h-80 w-full">
            </div>

        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-white">
        <div class="container mx-auto px-6" data-aos="fade-right">
            <h3 class="text-3xl font-bold text-gray-800 mb-6">About Sport In</h3>
            <p class="text-gray-600 text-lg">
                Sport In is a revolutionary platform that bridges the gap between players, coaches, clubs, and
                sports product companies.
                Whether you're an aspiring athlete looking for opportunities, or a professional club seeking new
                talents, our platform empowers everyone to grow, connect, and succeed.
            </p>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-blue-50">
        <div class="container mx-auto px-6" data-aos="fade-left">
            <h3 class="text-3xl font-bold text-gray-800 mb-6">Contact Us</h3>
            <p class="text-gray-600 mb-6">Have any questions? Feel free to reach out to us.</p>
            <div class="bg-white p-8 rounded shadow max-w-md mx-auto">
                <form id="contactForm" class="space-y-4">
                    <div>
                        <label class="block mb-1 text-gray-600">Your Name</label>
                        <input type="text" required class="input-field" id="name">
                    </div>
                    <div>
                        <label class="block mb-1 text-gray-600">Email</label>
                        <input type="email" required class="input-field" id="email">
                    </div>
                    <div>
                        <label class="block mb-1 text-gray-600">Message</label>
                        <textarea required rows="4" class="input-field" id="message"></textarea>
                    </div>
                    <button type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded">
                        Send Message
                    </button>
                </form>
                <p id="statusMessage" class="text-center mt-4 text-green-500 hidden">Your message has been sent
                    successfully!</p>
            </div>
        </div>
    </section>

    <!-- Registration Form (Initially Hidden) -->
    <section id="registrationForm" class="hidden py-10 bg-gray-100">
        <div class="max-w-xl mx-auto bg-white p-8 rounded shadow" data-aos="zoom-in">
            <h3 class="text-2xl font-bold mb-6 text-center text-gray-700">Register Now</h3>
            <form id="form" class="space-y-4">
                <div>
                    <label class="block mb-1 text-gray-600">Full Name</label>
                    <input type="text" id="name" required class="input-field">
                </div>

                <div>
                    <label class="block mb-1 text-gray-600">Role</label>
                    <select id="role" required class="input-field">
                        <option value="">Select</option>
                        <option value="Player">Player</option>
                        <option value="Coach">Coach</option>
                        <option value="Club">Club</option>
                        <option value="Company">Company</option>
                    </select>
                </div>

                <div id="athleteOptions" class="hidden">
                    <label class="block mb-1 text-gray-600">Select Your Sport</label>
                    <select id="sport" class="input-field">
                        <option value="Weightlifting">Weightlifting</option>
                        <option value="Swimming">Swimming</option>
                        <option value="Taekwondo">Taekwondo</option>
                        <option value="Handball">Handball</option>
                        <option value="Volleyball">Volleyball</option>
                        <option value="Basketball">Basketball</option>
                        <option value="Football">Football</option>
                    </select>
                </div>

                <div id="clubOptions" class="hidden">
                    <label class="block mb-1 text-gray-600">Club Manager's Email</label>
                    <input type="email" id="managerEmail" class="input-field">
                </div>

                <div>
                    <label class="block mb-1 text-gray-600">Email Address</label>
                    <input type="email" id="email" required class="input-field">
                </div>

                <div>
                    <label class="block mb-1 text-gray-600">Phone Number</label>
                    <input type="text" id="phone" required class="input-field">
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded">
                    Submit
                </button>

                <p id="statusMessage" class="text-center mt-4 text-green-500 hidden">Your information was submitted
                    successfully!</p>

            </form>
        </div>
    </section>

    <!-- AOS Animation Script -->
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();

        const joinButton = document.getElementById('joinButton');
        const registrationForm = document.getElementById('registrationForm');
        joinButton.addEventListener('click', () => {
            registrationForm.classList.toggle('hidden');
            registrationForm.scrollIntoView({ behavior: 'smooth' });
        });

        const form = document.getElementById('form');
        const statusMessage = document.getElementById('statusMessage');
        const roleSelect = document.getElementById('role');
        const athleteOptions = document.getElementById('athleteOptions');
        const clubOptions = document.getElementById('clubOptions');

        roleSelect.addEventListener('change', () => {
            const selectedRole = roleSelect.value;
            if (selectedRole === 'Player') {
                athleteOptions.classList.remove('hidden');
                clubOptions.classList.add('hidden');
            } else if (selectedRole === 'Club') {
                clubOptions.classList.remove('hidden');
                athleteOptions.classList.add('hidden');
            } else {
                athleteOptions.classList.add('hidden');
                clubOptions.classList.add('hidden');
            }
        });

        // Handle contact form submission
        const contactForm = document.getElementById('contactForm');
        contactForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const data = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                message: document.getElementById('message').value
            };

            try {
                const response = await fetch('/api/contact/send', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    statusMessage.classList.remove('hidden');
                    contactForm.reset();
                } else {
                    alert('Something went wrong. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Something went wrong. Please try again.');
            }
        });
    </script>

</body>

</html>

